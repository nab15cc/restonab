APP_NAME="Laravel"
APP_ENV=production
APP_KEY=   # <-- biarkan kosong, akan digenerate otomatis
APP_DEBUG=false
APP_URL=https://${RAILWAY_STATIC_URL}

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Railway (sesuaikan dengan variabel env Railway)
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}       # Railway akan inject variabel ini
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Session (bisa file atau database)
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache & Queue
QUEUE_CONNECTION=database
CACHE_STORE=database

# Redis (opsional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (dummy log untuk dev)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem
FILESYSTEM_DISK=local

# Laravel Vite
VITE_APP_NAME="${APP_NAME}"
